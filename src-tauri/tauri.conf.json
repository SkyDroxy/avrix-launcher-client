{
  "identifier": "com.avrix.launcher",
  "version": "0.0.1",
  "productName": "Avrix Launcher",
  "build": {
    "beforeDevCommand": "vite dev",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Avrix Launcher",
        "width": 1320,
        "height": 820,
        "minWidth": 1100,
        "minHeight": 700,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline';"
    }
  }
}
